root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120

[*.{yaml,yml}]
indent_size = 2

[*.{cmd,bat}]
end_of_line = crlf

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.{kt,kts}]
ij_kotlin_name_count_to_use_star_import = 999
ij_kotlin_name_count_to_use_star_import_for_members = 999
